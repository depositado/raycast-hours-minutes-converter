{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hours-minutes-converter",
  "title": "Hours:Minutes Converter",
  "description": "Converts time from hours and minutes to decimals.",
  "icon": "depositado-icon.png",
  "author": "ole_welling_ole_welling",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Time Convert",
      "description": "Enter time in the format hh:mm and get the decimal equivalent.",
      "mode": "view",
      "arguments": [
        {
          "name": "time",
          "type": "text",
          "placeholder": "e.g., 14:45"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.69.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
